# Telegram bot token from BotFather
BOT_TOKEN=

# Public URL that Telegram should call for updates.
# The path part is used as the incoming webhook route in the server.
# Example: https://bot.example.com/telegram/webhook
WEBHOOK_URL=

# Optional: Telegram webhook secret token for request verification
WEBHOOK_SECRET=

# Polling fallback (used when WEBHOOK_URL is empty)
POLLING_TIMEOUT_SEC=25
POLLING_IDLE_DELAY_MS=500
POLLING_ERROR_DELAY_MS=2000

# Optional system proxy env vars (used by outbound requests)
# HTTPS_PROXY=http://127.0.0.1:7890
# HTTP_PROXY=http://127.0.0.1:7890
# ALL_PROXY=http://127.0.0.1:7890
# ALL_PROXY=socks5://127.0.0.1:1080
# NO_PROXY=127.0.0.1,localhost,.internal.example.com
DISABLE_SYSTEM_PROXY=false

# FOSSBilling base URL (without trailing slash)
# Example: https://dash.mehrnet.com
BILLING_BASE_URL=

# FOSSBilling API key
BILLING_API_KEY=

# Server port (cPanel usually injects this automatically)
PORT=3000

# File paths (relative to runtime directory)
DATABASE_FILE=./database.json
WEBHOOK_LOCK_FILE=./webhook.lock

# Defaults for new users
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=UTC
